<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>

        <variable
            name="user"
            type="com.mj.databinding.MainActivity.User"/>

        <variable
            name="viewModel"
            type="com.mj.databinding.MainViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{()->viewModel.onClickHandler()}"
            app:bind_image="@{user.profileURL}"
            app:bind_image_error="@{@drawable/android}"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.name}"
            android:layout_gravity="center"
            android:textSize="30dp"
            tools:text="이부분에 이름이 표시됩니다."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.age}"
            android:layout_gravity="center"
            android:textSize="30dp"
            tools:text="이부분에 주소가 표시됩니다."/>
    </LinearLayout>
</layout>